<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/l2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:orientation="vertical" >
 <LinearLayout
            android:id="@+id/l20"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/icon_w"
                android:layout_height="@dimen/icon_h"
                android:src="@drawable/camera" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/photo_w"
                android:layout_height="@dimen/photo_h"
                android:src="@drawable/photography" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l21"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/img"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/edit"
                android:layout_width="@dimen/icon_w"
                android:layout_height="@dimen/icon_h"
                android:src="@drawable/ic_launcher" />

            <EditText
                android:id="@+id/txtTitleE"
                style="What"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="15dp"
                android:text="What" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l22"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/l21"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/date"
                android:layout_width="@dimen/icon_w"
                android:layout_height="@dimen/icon_h"
                android:src="@drawable/calendar2" />

            <EditText
                android:id="@+id/textwhenE"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="when" />
                
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l23"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/l22"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/loc"
                android:layout_width="@dimen/icon_w"
                android:layout_height="@dimen/icon_h"
                android:src="@drawable/loc2" />

            <EditText
                android:id="@+id/textWhereE"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:text="where" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l24"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/l23"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/re"
                android:layout_width="@dimen/icon_w"
                android:layout_height="@dimen/icon_h"
                android:src="@drawable/remind2" />

            <RadioButton
                android:id="@+id/remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remind?" />
        </LinearLayout>
    </LinearLayout>
 <include
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/bottom_edit_menu" />
</RelativeLayout>